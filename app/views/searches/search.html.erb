<%= render "shared/header"%>

<h3 class="page-title">検索結果(新着順)</h3>
<ul class='clothe-lists'>

  <% if @results.length !=0 %>
  
    <% @results.each do |result| %>
      <li class='clothe-list'>

        <div class="msr_box01">
          <div class=''>
            <%= link_to image_tag(result.image, class: "clothe-img"), clothe_path(result.id) %>
          </div>

          <div class=''>
            <h3 class='ttl'>
              <%= result.name %>
            </h3>
            
            <p class='index-money'>
              <% unless result.history.present? %>
                <span>¥<%= result.price.to_s(:delimited) %></span>
                  <% if result.delivery_burden_id == 2 %>
                    <span>(送料購入者負担)</span>
                  <% end %>
              <% else %>
                <%= image_tag "/images/soldout.png" %>
              <% end %>
            </p>
          </div>

        </div>
      </li>
    <% end %>
  <% else %>
    <p>※商品が存在しません※</p>
  <% end %>
</ul>