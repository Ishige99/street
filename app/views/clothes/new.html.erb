<h1>商品投稿</h1>

<%= form_with(model: @clothe, local: true) do |f| %>

  <div class="">
    <div class="">
      <label class="">商品画像(必須)</label>
    </div>
    <%= f.file_field :image, class: "" %>
  </div>

  <div class="">
    <div class="">
      <label class="">カテゴリー(必須)</label>
    </div>
    <%= f.collection_select(:category_id, Category.all, :id, :name, {}, { class: "" })%>
  </div>

  <div class="">
    <div class="">
      <label class="">サイズ(必須)</label>
    </div>
    <%= f.collection_select(:size_id, Size.all, :id, :name, {}, { class: "" })%>
  </div>

  <div class="">
    <div class="">
      <label class="">商品の状態(必須)</label>
    </div>
    <%= f.collection_select(:state_id, State.all, :id, :name, {}, { class: "" })%>
  </div>

  <div class="">
    <div class="">
      <label class="">商品名(必須)</label>
    </div>
    <%= f.text_field :name, class: "", id: "clothe-name", pleceholder: "商品名" %>
  </div>

  <div class="">
    <div class="">
      <label class="">商品の説明(必須)</label>
    </div>
    <%= f.text_area :text, class: "", id: "clothe-text", placeholder: "商品の説明(400文字以内)" %>
  </div>

  <div class="">
    <div class="">
      <label class="">配送料の負担(必須)</label>
    </div>
    <%= f.collection_select(:delivery_burden_id, DeliveryBurden.all, :id, :name, {}, { class: "" })%>
  </div>

  <div class="">
    <div class="">
      <label class="">配送方法(必須)</label>
    </div>
    <%= f.collection_select(:delivery_method_id, DeliveryMethod.all, :id, :name, {}, { class: "" })%>
  </div>

  <div class="">
    <div class="">
      <label class="">発送元の地域(必須)</label>
    </div>
    <%= f.collection_select(:delivery_source_id, DeliverySource.all, :id, :name, {}, { class: "" })%>
  </div>

  <div class="">
    <div class="">
      <label class="">発送までの日数(必須)</label>
    </div>
    <%= f.collection_select(:delivery_day_id, DeliveryDay.all, :id, :name, {}, { class: "" })%>
  </div>

  <div class="">
    <div class="">
      <label class="">販売価格(必須)</label>
    </div>
    <%= f.text_field :price, class: "", id: "clothe-price"%>
  </div>

  <%= f.submit "出品", class:"clothe-submit" %>

<% end %>


<br><%= link_to 'トップページに戻る', root_path, class: "root-page" %>