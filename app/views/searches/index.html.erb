<%= render "shared/header"%>

<div class="search-clothes-page">

  <h1 class="search-clothes-title">商品検索</h1>

  <%= search_form_for @c, url: search_searches_path do |f| %>
    <%= f.label :category_id_eq, 'カテゴリー' %><br>
    <%= f.collection_select :category_id_eq, @category, :id, :name, include_blank: '指定なし' %><br>
    <br>
    <%= f.label :size_id_eq, 'サイズ：' %><br>
    <%= f.collection_select :size_id_eq, @size, :id, :name, include_blank: '指定なし' %><br>
    <br>
    <%= f.label :state_id_eq, '商品の状態：' %><br>
    <%= f.collection_select :state_id_eq, @state, :id, :name, include_blank: '指定なし' %><br>
    <br>
    <%= f.submit '検索', class:"btn-square-so-pop" %>
  <% end %>

</div>

<%= render "shared/footer" %>