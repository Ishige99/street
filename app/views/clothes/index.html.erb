<h1>STREET</h1>
<% if user_signed_in? %>
  <div class="user-nickname"><%= current_user.nickname %>様</div>
  <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %>
<% else %>
  <%= link_to '新規登録', new_user_registration_path, class: "sign-up" %>
  <%= link_to 'ログイン', user_session_path, class: "log-in" %>
<% end %>

<%= link_to "商品を出品する", new_clothe_path, class: "new-clothe"%>

<br>
<br>
<br>

<h3>投稿商品一覧</h3>
<ul class='clothe-lists'>
  <% if @clothes.present? %>
    <% @clothes.each do |clothe| %>
      <li class='clothe-list'>

        <div class=''>
          <%= link_to image_tag(clothe.image, class: "clothe-img"), clothe_path(clothe.id) %>
        </div>

        <div class=''>
          <h3 class=''>
            <%= clothe.name %>
          </h3>
          
          <div class=''>
            <span>¥<%= clothe.price %></span>
          </div>
        </div>
      </li>
    <% end %>
  <% else %>
    <p>※商品が存在しません※</p>
  <% end %>
</ul>